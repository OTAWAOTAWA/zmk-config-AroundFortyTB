/* Right half (central) — PMW3610 = pointing-device（マウス）
 * 配線: SCK=P0.05, MOSI=P0.04, MISO=P1.14, CS=P0.09, MOTION/IRQ=P0.02
 * 共通キーマトリクスは around_forty_tb.dtsi 側。
 */

#include "around_forty_tb.dtsi"

/* around_forty_tb_right.overlay のどこかに追加（include後ならOK） */
&default_transform {
    col-offset = <5>;   /* 左手5列ぶん右へシフト */
};

/* UART無効化（任意） */
&xiao_serial { status = "disabled"; };

/* マウスの指名（右のみ） */
 / {
    chosen {
        zmk,pointing_device = &pmw3610_b_right;
    };
};

/* ---- SPI pinctrl（右） ----
 * ★他の overlay とラベル衝突しないように _right を付与
 */
&pinctrl {
    spi0_right_default: spi0_right_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK,  0, 5)>,  /* P0.05 */
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,  /* P0.04 */
                    <NRF_PSEL(SPIM_MISO, 1, 14)>; /* P1.14 */
        };
    };

    spi0_right_sleep: spi0_right_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK,  0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 1, 14)>;
            low-power-enable;
        };
    };
};

/* ---- PMW3610（右, pointing-device） ---- */
&spi0 {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_right_default>;
    pinctrl-1 = <&spi0_right_sleep>;
    pinctrl-names = "default", "sleep";

    /* CS = P0.09 (Active Low) */
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;

    pmw3610_b_right: pmw3610@0 {
        status = "okay";
        compatible = "zmk,pointing-device-pmw3610-b";
        label = "RIGHT_TB";
        reg = <0>;
        spi-max-frequency = <2000000>;

        /* MOTION/IRQ = P0.02（Active Low + Pull-up） */
        irq-gpios = <&gpio0 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;

        /* 必要なら反転
         * x-invert;
         * y-invert;
         */
    };
};
