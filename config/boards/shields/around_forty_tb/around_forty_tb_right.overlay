/* Right half (central) — PMW3610 をポインティングデバイスとして使用
 * - 共通の行列や transform は around_forty_tb.dtsi に記述済み前提
 * - SPI0: SCK=P0.05, MOSI=P0.04, MISO=P1.14
 * - CS=P0.09, MOTION/IRQ=P0.02
 */

#include "around_forty_tb.dtsi"

/ {
    /* 右手側でトラックボールをマウスとして使う */
    chosen {
        zmk,pointing_device = &pmw3610_b_right;
    };
};

/* UART無効化（省電力＆ピン競合回避） */
&xiao_serial { status = "disabled"; };

/* ---- SPI pinctrl（右） ---- */
&pinctrl {
    spi0_default: spi0_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK,  0, 5)>,  /* P0.05 */
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,  /* P0.04 */
                    <NRF_PSEL(SPIM_MISO, 1, 14)>; /* P1.14 */
        };
    };

    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK,  0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 1, 14)>;
            low-power-enable;
        };
    };
}

/* ---- PMW3610（右） ---- */
&spi0 {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";

    /* CS = P0.09 (Active Low) */
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;

    /* badjeff ドライバ（マウスデバイスとしての PMW3610-B） */
    pmw3610_b_right: pmw3610@0 {
        status = "okay";
        compatible = "zmk,pointing-device-pmw3610-b";
        label = "RIGHT_TB";
        reg = <0>;
        spi-max-frequency = <2000000>;

        /* MOTION/IRQ = P0.02（Active Low + Pull-up） */
        irq-gpios = <&gpio0 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;

        /* 方向調整が必要なら以下を有効化（例）
         * x-invert;
         * y-invert;
        */
    };
};
