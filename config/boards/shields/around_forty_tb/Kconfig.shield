# Around Forty TB - shields Kconfig

config SHIELD_AROUND_FORTY_TB_RIGHT
    def_bool $(shields_list_contains,around_forty_tb_right)

config SHIELD_AROUND_FORTY_TB_LEFT
    def_bool $(shields_list_contains,around_forty_tb_left)

# 左右どちらか一方でも true になる共通フラグ
config SHIELD_AROUND_FORTY_TB
    def_bool SHIELD_AROUND_FORTY_TB_RIGHT || SHIELD_AROUND_FORTY_TB_LEFT
