/* config/boards/shields/around_forty_tb/around_forty_tb.dtsi
 *
 * 行列: rows=4 (D1,D2,D3,D6), cols=5 (D10,D9,D8,D7,P0.10)
 * ダイオード方向: col2row
 * 追加: P0.10 をGPIO化するため .conf に
 *   CONFIG_NFCT_PINS_AS_GPIOS=y
 * を入れてください。
 */

#include <dt-bindings/zmk/matrix_transform.h>

 / {
    /* このシールドで使う KSCAN と行列変換を指名 */
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform; /* ★これが無いと map を見に行かない */
    };

    /* --- キースキャン行列 --- */
    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";

        /* Rows（入力, プルダウン付）: D1,D2,D3,D6 */
        row-gpios =
            <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;

        /* Cols（出力）: D10,D9,D8,D7,P0.10 */
        col-gpios =
            <&xiao_d 10 GPIO_ACTIVE_HIGH>,
            <&xiao_d  9 GPIO_ACTIVE_HIGH>,
            <&xiao_d  8 GPIO_ACTIVE_HIGH>,
            <&xiao_d  7 GPIO_ACTIVE_HIGH>,
            <&gpio0  10 GPIO_ACTIVE_HIGH>;
    };

    /* --- 行列→キー番号 変換 --- */
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <4>;
        columns = <5>;

        /* 物理配列に合わせて RC(r,c) を 4x5=20 個 並べる */
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)
        >;
    };
};
