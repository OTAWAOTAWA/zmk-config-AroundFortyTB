/* config/boards/shields/around_forty_tb/around_forty_tb.dtsi
 *
 * 共通キーマトリクス定義（col2row）
 * Cols: D10, D9, D8, D7, P0.10
 * Rows: D1, D2, D3, D6  （入力は PULL_DOWN）
 *
 * ※ P0.10 を GPIO として使うため、.conf に
 *    CONFIG_NFCT_PINS_AS_GPIOS=y
 *    を入れてください。
 */

#include <dt-bindings/zmk/matrix_transform.h>

 / {
    /* このシールドで使う KSCAN を指名 */
    chosen {
        zmk,kscan = &kscan0;
    };

    /* ---- キーマトリクス ---- */
    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";

        /* Rows（入力 / PULL_DOWN あり）
         * D1=P0.02, D2=P0.03, D3=P0.28, D6=P1.11
         */
        row-gpios =
            <&xiao_d  1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&xiao_d  2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&xiao_d  3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&xiao_d  6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;

        /* Cols（出力 / プルなし）
         * D10=P1.15, D9=P1.14, D8=P1.13, D7=P1.12, 追加: P0.10
         */
        col-gpios =
            <&xiao_d 10 GPIO_ACTIVE_HIGH>,
            <&xiao_d  9 GPIO_ACTIVE_HIGH>,
            <&xiao_d  8 GPIO_ACTIVE_HIGH>,
            <&xiao_d  7 GPIO_ACTIVE_HIGH>,
            <&gpio0  10 GPIO_ACTIVE_HIGH>;

        /* 必要に応じてデバウンスを有効化してください
         * debounce-press-ms = <5>;
         * debounce-release-ms = <5>;
         */
    };
};
