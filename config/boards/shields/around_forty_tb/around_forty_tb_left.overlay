/* Left half (peripheral) — badjeff の encoder ドライバで PMW3610 を使用 */
#include "around_forty_tb.dtsi"

/* UART 無効化（任意） */
&xiao_serial { status = "disabled"; };

/* ---- SPI pinctrl（左） ---- */
&pinctrl {
    spi0_default: spi0_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK,  0, 5)>,  /* SCK  = P0.05 (D5) */
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,  /* MOSI = P0.04 (D4) */
                    <NRF_PSEL(SPIM_MISO, 1, 14)>; /* MISO = P1.14 (D9) */
        };
    };

    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK,  0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 1, 14)>;
            low-power-enable;
        };
    };
};

/* ---- PMW3610（左, encoder モード） ---- */
&spi0 {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";

    /* CS = P0.09 (Active Low) */
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;

    pmw3610_b_left: pmw3610@0 {
        status = "okay";
        compatible = "zmk,encoder-pmw3610-b";
        label = "LEFT_TB";
        reg = <0>;
        spi-max-frequency = <2000000>;
        /* MOTION/IRQ = P0.02（Active Low + Pull-up） */
        irq-gpios = <&gpio0 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;

        /* 必要に応じて向き調整
         * x-invert;
         * y-invert;
         * swap-xy;
         */
    };
};
